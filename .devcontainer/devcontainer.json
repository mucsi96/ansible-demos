// https://github.com/microsoft/vscode-dev-containers/tree/v0.202.3/containers/python-3
{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			"VARIANT": "3.9-bullseye",
		}
	},	
	"customizations": {
		"vscode": {
			"settings": { 
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				},
			},
		}
	},
	"remoteUser": "vscode"
}